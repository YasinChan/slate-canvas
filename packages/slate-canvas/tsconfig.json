{
    "extends": "../../tsconfig.json", // 可选项，可以继承共享的基础配置
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "target": "ES2015",
        "module": "esnext",
        "declaration": true,
        "outDir": "dist",
        "strict": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
